<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNoteActivity"
    android:id="@+id/addActivityLinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_Back"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_monthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="17dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText

            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="start" />
    </LinearLayout>


    <HorizontalScrollView
        android:fitsSystemWindows="true"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="10dp">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="30dp"
                    android:layout_marginRight="35dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/image" />

                <ImageView
                    android:layout_marginRight="35dp"
                    android:id="@+id/iv_clothes_onFocus"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/clothes" />

                <ImageView
                    android:layout_marginRight="35dp"
                    android:id="@+id/iv_center"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/center" />

                <ImageView
                    android:layout_marginRight="35dp"
                    android:id="@+id/iv_bold"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/bold" />

                <ImageView
                    android:layout_marginRight="35dp"
                    android:id="@+id/iv_qingxie"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/qingxie" />

                <ImageView
                    android:id="@+id/iv_Aa"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/textsize" />
            </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:fitsSystemWindows="true"
        android:id="@+id/focusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/iv_clothes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/clothes" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/more" />

    </LinearLayout>
</LinearLayout>